<div class="container mx-auto">
  <h1 class="text-center text-4xl font-extrabold mb-10">Login Page</h1>
  <div class="flex flex-col items-center gap-4">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.email_field :email, class: "border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :password, class: "border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex flex-col text-center">
        <div class="text-center">
          <%= f.submit "Login", class: "block text-white font-bold mb-2 bg-indigo-500 text-center inline p-2 border rounded cursor-pointer" %>
        </div>
        <span class=>New User? <%= link_to 'Sign Up Now!', signup_path, class:"underline"%> </span>
      </div>
    <% end %>
  </div>
</div>

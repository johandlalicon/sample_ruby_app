<% provide(:title, 'Edit User') %>
<div class="flex flex-col items-center gap-4">
  <div>
    <%= render 'shared/error_messages' %>
  </div>
  <div class="flex flex-col justify-center">
    <%= gravatar_for @user %>
    <a href="https://gravatar.com/emails" target="_blank" class="text-center text-sm" rel="noopener">change</a>
  </div>
  <%= form_for(@user) do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :name, class: "border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email, class: "border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password, class: "border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirmation", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, class: "border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="text-center mt-10">
      <%= f.submit "Update my account", class: "block text-white font-bold mb-2 bg-indigo-500 text-center inline p-2 border rounded cursor-pointer" %>
    </div>
  <% end %>
</div>
